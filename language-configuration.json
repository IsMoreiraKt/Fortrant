{
  "comments": {
    "blockComment": [],
    "lineComment": "!"
  },

  "autoCloseBefore": ";:.,=}])> \n\t",
  "autoClosingPairs": [
    [ "(", ")" ],
    [ "[", "]" ],
    [ "{", "}" ]
  ],

  "brackets": [
    [ "(", ")" ],
    [ "[", "]" ],
    [ "{", "}" ]
  ],
  "colorizedBracketPairs": [
    [ "(", ")" ],
    [ "[", "]" ],
    [ "{", "}" ]
  ],

  "folding": {
    "markers": {
      "start": "^[!]*\\s*\\<\\s*region\b",
      "end": "^[!]*\\s*\\<\\s*end region\b"
    },

    "offSide": true
  },

  "indentationRules": {
    "increaseIndentPattern": "^(\\s*if\\s*|\\s*do\\s*|\\s*subroutine\\s*|\\s*function\\s*|\\s*module\\s*)",
    "decreaseIndentPattern": "^\\s*end\\s*",
    "indentNextLinePattern": "^(\\s*(if|do|subroutine|function|module)\\s*\\(|\\s*where\\s*\\()",
    "unIndentedLinePattern": "^\\s*end\\s*",
  },

  "onEnterRules": [
    {
      "beforeText": "^\\s*$",
      "action": { "indent": "none" }
    },
    {
      "beforeText": "\\s*if\\s*\\(|[^\n]*$",
      "afterText": "\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "\\s*do\\s*\\(|[^\n]*$",
      "afterText": "\\s*$",
      "action": { "indent": "indent" }
    }
  ],

  "surroundingPairs": [
    [ "(", ")" ],
    [ "[", "]" ],
    [ "{", "}" ]
  ],

  "wordPattern": "\\w+"
}