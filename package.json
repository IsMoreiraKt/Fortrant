{
  "name": "fortrant",
  "displayName": "Fortrant",
  "icon": "resources/icons/fortran-icon.png",
  "description": "Syntax highlighting plugin for fortran.",
  "version": "0.0.1",
  
  "engines": { "vscode": "^1.94.0" },
  "categories": [ 
    "Programming Languages",
    "Snippets"
  ],

  "readme": "README.md",
  "license": "MIT",

  "contributes": {
    "languages": [
      {
        "id": "fortran",
        "aliases": ["Fortran", "fortran"],
        
        "extensions": [
          ".f", ".for", ".f90",
          ".f95", ".f03", ".f08",
          ".f2018", ".p", ".include"
        ],
        
        "icon": { 
          "dark": "resources/icons/fortran-icon.png",
          "light": "resources/icons/fortran-icon.png"
        },

        "configuration": "./language-configuration.json"
      }
    ],

    "grammars": [
      {
        "language": "fortran",
        "scopeName": "source.fortran",
        "path": "./syntaxes/fortran.tmLanguage.json"
      }
    ],

    "snippets": [
      {
        "language": "fortran",
        "path": "./snippets/snippets.code-snippets"
      }
    ]
  },

  "author": {
    "name": "Ismael Moreira",
    "email": "ismaelmoreirakt@gmail.com",
    "url": "https://github.com/IsMoreiraKt"
  },
  "publisher": "IsMoreiraKt",
  "homepage": "https://github.com/IsMoreiraKt/fortrant",
  "repository": {
    "type": "git",
    "url": "https://github.com/IsMoreiraKt/fortrant"
  },
  "bugs": {
    "email": "ismaelmoreirakt@gmail.com",
    "url": "https://github.com/IsMoreiraKt/fortrant/issues"
  }
}